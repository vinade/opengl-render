#version 460 core

struct LightSource
{
    float ambient;
    float strength;
    int type;
    vec3 position;
    vec4 color;
};

in vec3 v_skyboxCoord;

out vec4 color;

uniform samplerCube u_Texture;
uniform LightSource u_AmbientLight;
uniform vec4 u_Color;

void main(){
	vec4 colorTex = texture(u_Texture, v_skyboxCoord);
    color = colorTex + u_AmbientLight.ambient * u_AmbientLight.color;
    color = (1.0 - u_Color.a) * color + u_Color.a * u_Color;
}
