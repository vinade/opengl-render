#version 460 core

in vec2 v_texCoord;

out vec4 color;

uniform vec4 u_Color;
uniform sampler2D u_Texture;

void main(){
	vec3 colorTex = texture(u_Texture, v_texCoord).xyz - 0.98;
    color = vec4(colorTex * 50.0, 1.0);

    // DEBUG
    // color = vec4(1.0, 0.0, 0.0, 1.0);
    color.g = color.r;
    color.b = color.r;
}
